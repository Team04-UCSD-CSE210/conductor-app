{
  "name": "conductor-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:md",
    "lint:js": "eslint .",
    "lint:css": "stylelint '**/*.css' || echo 'No CSS files found'",
    "lint:html": "htmlhint '**/*.html'",
    "lint:md": "markdownlint '**/*.md'",
    "docs": "jsdoc -d docs .",
    "test": "echo 'Skipping tests on CI (requires local DB)' && exit 0",
    "local:test": "node scripts/run-tests.js",
    "perf:db": "node scripts/perf-db.cjs",
    "perf:api": "node scripts/perf-api.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6",
    "validator": "^13.15.20"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "autocannon": "^8.0.0",
    "eslint": "^8.55.0",
    "htmlhint": "^1.1.4",
    "jsdoc": "^4.0.2",
    "markdownlint-cli": "^0.45.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "vitest": "^4.0.7"
  }
}
