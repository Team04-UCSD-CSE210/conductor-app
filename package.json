{
  "name": "conductor-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:md",
    "lint:js": "eslint .",
    "lint:css": "stylelint '**/*.css' || echo 'No CSS files found'",
    "lint:html": "htmlhint '**/*.html'",
    "lint:md": "markdownlint '**/*.md'",
    "docs": "jsdoc -d docs .",
    "test": "node --test --experimental-test-coverage --test-coverage-lines=0.8 --test-coverage-functions=0.8 --test-coverage-branches=0.8 --test-coverage-include=src/**/*.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "express-session": "^1.17.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "eslint": "^8.55.0",
    "htmlhint": "^1.1.4",
    "jsdoc": "^4.0.2",
    "markdownlint-cli": "^0.45.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
